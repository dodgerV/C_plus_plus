#include <iostream>
#include <stdlib.h>
#include <string.h>
#include <fstream>

using namespace std;

template<class T> class List
{
	public:
		List(){};
		List(T);
		List *prev;
		List *next;
		T data;
};

template<class T> List<T>::List(T inf)
{
	List::data=inf;
	prev=NULL;
	next=NULL;
}


template<class T> List<T> *add_to_end(List<T> *first,List<T> *elem)
{
 	
	List<T> *temp=NULL;
	temp=first;
	while(temp->next!=NULL) temp=temp->next;

	elem->prev=temp;
	temp->next=elem;
	return first;
}




